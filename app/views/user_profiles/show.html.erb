<div>
  <div>
    <h1>
      User profile #<%= @the_user_profile.id %> details
    </h1>

    <div>
      <div>
        <a href="/user_profiles">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_user_profile/<%= @the_user_profile.id %>">
          Delete user profile
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_user_profile.name %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_user_profile.user_id %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_user_profile.bio %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user_profile.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user_profile.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit user profile
    </h2>

    <form action="/modify_user_profile/<%= @the_user_profile.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_user_profile.name %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_user_profile.user_id %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio"><%= @the_user_profile.bio %></textarea>
      </div>

      <button>
        Update user profile
      </button>
    </form>
  </div>
</div>

<hr>
